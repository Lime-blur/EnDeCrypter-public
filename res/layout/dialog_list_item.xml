<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/dialogsImageItem"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/dialogs_avatar_photo"
        android:padding="5dp" />

    <TextView
        android:id="@+id/dialogsNameItem"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_toEndOf="@+id/dialogsImageItem"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textColor="#2B2B2B"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/dialogsTimeItem"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:layout_toEndOf="@+id/dialogsNameItem"
        android:fontFamily="sans-serif-medium"
        android:gravity="right|center_vertical"
        android:paddingStart="5dp"
        android:paddingEnd="10dp"
        android:textColor="#9A9A9A"
        android:textSize="12sp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/dialogsTextItem"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/dialogsNameItem"
        android:layout_toEndOf="@+id/dialogsImageItem"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="15sp" />

</RelativeLayout>